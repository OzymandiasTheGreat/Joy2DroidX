{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"esModuleInterop": true ,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": true,
		"noEmitOnError": true,
		"lib": [
			"es2018",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"app/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"platforms"
	]
}
